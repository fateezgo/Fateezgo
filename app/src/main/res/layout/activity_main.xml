<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.com.fateezgo.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backgbase">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_vertical|center_horizontal"
       android:layout_marginBottom="0dp"
       android:background="@drawable/backgfrontpage">

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="0dp"
           android:adjustViewBounds="false"
           android:background="@drawable/logofate_frontpage" />

   </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn01"
            android:layout_marginRight="20dp"
            android:background="@drawable/iconfinmast" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn02"
            android:layout_marginLeft="20dp"
            android:background="@drawable/iconfreemast" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn03"
            android:layout_marginRight="20dp"
            android:background="@drawable/iconfateved" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn04"
            android:layout_marginLeft="20dp"
            android:background="@drawable/iconmembfron" />
    </LinearLayout>

</LinearLayout>
</ScrollView>